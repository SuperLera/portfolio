include ./mixins.pug

<!DOCTYPE html>
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible", content="ie=edge")
    title Portfolio | main page
  body
    .wrapper
      header.header
        .header__logo
          .logo ВК
        .header__menu
          ul.socials
            each social in [{title: "insta", link: "https://www.instagram.com"}, {title: "vk", link: "https://vk.com/valeriia_koroleva"}, {title: "github", link: "https://github.com/SuperLera"}]
              li.socials__item
                a(class=`socials__link socials__link--${social.title}` href=`${social.link}` target="_blank")
                  +icon(social.title, "socials__icon")

        .header__socials
          - var menu = ["Главная", "Обо мне", "Навыки", "Работы", "Отзывы", "Связаться"]
          nav.menu
            ul.menu__list
              each item in menu
                li.menu__item
                  a.menu__link #{item}

      main.main
        .welcome-section
          section.hero.fullscreen-section
            .hero__content
              .user-info
                .user-info__desc Личный сайт <br>веб-разработчика
                .user-info__name Валерия Королева
            .hero__navigation
              a.scroll-btn Скролл
          section.about



