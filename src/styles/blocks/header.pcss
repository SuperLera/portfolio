.header {
  position: fixed;
  width: 100%;
  z-index: 1;
  padding: 50px 0;

  @include desktop {
    padding: 40px 0;
  }
}

.header__container {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.header__menu {
  margin: 0 90px;

  @include desktopHd{
    margin: 0 20px;
  }

  @include desktop {
    display: none;
  }
}

.header__socials {
  @include phones {
    display: none;
  }
}

.header__mobile-menu {
  display: none;

  @include desktop {
    display: block;
  }
}