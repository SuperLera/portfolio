.nav__list {
  display: flex;
  flex-wrap: wrap;
}

.nav__item {
  margin-right: 60px;

  @include desktopHd {
    margin-right: 44px;
  }

  &:last-child {
    margin-right: 0;
  }

  @include desktop {
    margin-bottom: 30px;
  }
}

.nav__link {
  padding: 10px 0 20px;
  border-bottom: 2px solid transparent;
  transition: $trans-hover;

  &:hover {
    color: $main-color;
  }
}