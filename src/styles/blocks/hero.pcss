.hero__container {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
}

.hero__content {
  padding-top: 25%;
}

.hero__navigation {
  padding-bottom: 15%;
}

.hero__navigation-btn {
  position: relative;
  margin-right: 20px;

  &::after {
    content: '';
    position: absolute;
    left: 70px;
    width: 20px;
    height: 20px;
    background: svg-load('scroll.svg', fill=$text-color, width=100%, height=100%);
  }
}